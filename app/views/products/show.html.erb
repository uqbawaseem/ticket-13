<div class="container">
<h3>Product's Detail</h3><br>
  <table class="table" style="width: 70%;">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <%if @product.image.attached?%>
        <th scope="col">
          <%= image_tag(@product.image, style: "width: 20%; height: 10%")%>
        </th>
          <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">Name</th>
        <td><%= @product.name%></td>
      </tr>
      <tr>
        <th scope="row">Color</th>
        <td><%= @product.color%></td>
      </tr>
      <tr>
        <th scope="row">Price</th>
        <td><%= @product.price%></td>
      </tr>
      <tr>
      <tr>
        <th scope="row">Suggestions</th>
        <td>
         <ol>
        <% @product.suggestions.each do |s|%>
          <li>
            <%= s.suggestion.capitalize%>
          </li>
        <% end %>
         </ol>
        </td>
      </tr>
    </tbody>
  </table>
  <h4>Add New Suggestion</h4>
  <%= render 'suggestions/form'%>
</div>
